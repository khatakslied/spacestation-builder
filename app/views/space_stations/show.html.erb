<h1><%= @space_station.name %></h1>
<h3>Crew Capacity: <%= @space_station.capacity %></h3>
<h3>Current Power Output: <%= @space_station.power %> kWh</h3>

<%= simple_form_for [@space_station, @installment] do |f| %>
  <%= f.association :component, label_method: :component_type, as: :radio_buttons %>
  <%= f.submit "Add Module" %>
<% end %>

<div class="station-container" style="background-image: url(<%=  %>)">
  <% @components.each do |component| %>
    <div class="station-module-card">
      <%= image_tag component.image_url %>
      <p><%= component.component_type.capitalize %> Module</p>
    </div>
  <% end %>
</div>



